{# src/CoreBundle/Resources/views/layout.html.twig #}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Acceuil{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    {% endblock %}
</head>

<body>
    <div class="container-fluid">
        <!-- Le HEADER -->
        <div id="header" style="background-color:rgba(150, 124, 92, 1);" class="row">
            <div class="col-md-offset-8 col-xs-2">
                <img src="/BilleterieLouvre/web/Ressources/img/LogoLouvre.png" alt="LogoLouvre" href="" />
            </div>
        </div>
        
        
        <div class="row" style="margin-bottom:75px;">
            <!-- Le Menu de Navigation -->
            <div id="menu" class="col-md-1">
                <h3>Navigation</h3>
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="{{ path('billeterie') }}">Billetterie</a></li>
                    <li><a href="{{ path('billeterie_panier') }}">Panier</a></li>
                </ul>
            </div>
            <!-- Le Corps de la page -->
            <div id="content" class="col-md-offset-1 col-md-9">
                <br/> 
                {% for flashMessage in app.session.flashbag.get('alert') %}
                    <div class="alert alert-info">{{ flashMessage }}</div>
                {% endfor %}
                {% block body %} {% endblock %}
            </div>
        </div>
        <!-- Le FOOTER -->
            <!-- ATTENTION REGLAGE DE LA MARGE A FAIRE POUR QUE TOUT LE TEXTE DE LA PAGE SOIT VISIBLE ET NON CACHER SOUS LE FOOTER -->
        <div class="row navbar-fixed-bottom" style="background-color:rgba(150, 124, 92, 1);">
            <footer>
                <br/>
                <p style="text-align:center;">Musée du Louvre © {{ 'now'|date('Y') }}.</p>
            </footer>
        </div>
    </div>
    {% block javascripts %}
        <script src="//code.jquery.com/jquery-1.10.2.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
        <script src="/BilleterieLouvre/web/Ressources/JS/Billeterie.js"></script>
    {% endblock %}

</body>

</html>