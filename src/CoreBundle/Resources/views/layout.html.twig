{# src/CoreBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Acceuil{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    {% endblock %}
</head>

<body>
    <div class="container">
        <!-- Le HEADER -->
        <div id="header" style="background-color:rgba(143, 126, 116, 0.4);" class="row">
            <div class="col-md-offset-7 col-xs-2">
                <img src="../img/mousee-louvre-logo-2.png" alt="LogoLouvre" href="" />
            </div>
        </div>
        
        <!-- Le Corps de la page -->
        <div class="row">
            <div id="menu" class="col-md-2">
                <h3>Navigation</h3>
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="">Accueil</a></li>
                    <li><a href="">Ajouter une annonce</a></li>
                    <li><a href="">S'identifier</a></li>
                </ul>
            </div>
            <div id="content" class="col-md-10">
                <br/> {% block body %} {% endblock %}
            </div>
        </div>
        <!-- Le FOOTER -->
            
        <div class="row" style="background-color:rgba(143, 126, 116, 0.4);">
            <footer>
                <br/>
                <p style="text-align:center;"> &nbsp Musée du Louvre © {{ 'now'|date('Y') }}.</p>
            </footer>
        </div>
    </div>
    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    {% endblock %}

</body>

</html>