{# src/CoreBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Acceuil{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  {% endblock %}
</head>

<body>
  <div class="container-fluid">
    <div id="header" style="background-color:rgba(143, 126, 116, 0.4);" class="row">
        <div class="col-xs-offset-2 col-md-offset-7">
            <img src="../img/mousee-louvre-logo-2.png" alt="LogoLouvre" href=""/>
        </div>

    </div>

    <div class="row">
      <div id="menu" class="col-xs-12">
        <ul class="nav navbar-nav">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><h4>Navigation</h4>
        <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="">Accueil</a></li>
                    <li><a href="">Billeterie</a></li>
                    <li><a href="">Infos</a></li>
                    <li><a href="">Contact</a></li>
                </ul>
            </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div id="content" class="col-md-8">
          <br/>
        {% block body %}
        {% endblock %}
      </div>
    </div>
    <div class="row" style="background-color:rgba(143, 126, 116, 0.4);" >
        <footer>
            <br/>
          <p style="text-align:center;"> &nbsp Musée du Louvre © {{ 'now'|date('Y') }}.</p>
        </footer>
      </div>
    </div>
  {% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>