{% extends "layout.html.twig" %}

{% block body %}
<h3>Création de billet - {% if demiJour == 'true' %}Demi-journée - A partir de 14H {% else %} Journée {% endif %} - Etape 1</h3>

    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}

        <!-- Nombre de Billets -->
        <div class="form-group">
          {# Génération du label. #}
          {{ form_label(form.nombre, "Combien de billet voulez-vous : ", {'label_attr': {'class': 'col-md-3 control-label'}}) }}

          {{ form_errors(form.nombre) }}

          <div class="col-md-4">
            {{ form_widget(form.nombre) }}
          </div>
        </div>
            
        <!-- Champs De eMail -->
        <div class="form-group">
          {{ form_label(form.email, "A quel E-mail envoyons nous vos billets : ", {'label_attr': {'class': 'col-md-3 control-label'}}) }}

          {{ form_errors(form.email) }}

          <div class="col-sm-4">
            {{ form_widget(form.email) }}
          </div>
        </div>
            
        <!-- Champs De Nom de famille -->
        <div class="form-group">
          {{ form_label(form.nom, "Quel est le nom de famille des personnes qui se rendrons au musée : ", {'label_attr': {'class': 'col-md-3 control-label'}}) }}

          {{ form_errors(form.nom) }}

          <div class="col-sm-4">
            {{ form_widget(form.nom) }}
          </div>
        </div>

        <!-- Date de reservation -->
        <div class="form-group">
          {# Génération du label. #}
          {{ form_label(form.dateReservation, "Pour quand voulez-vous réserver : ", {'label_attr': {'class': 'col-md-3 control-label'}}) }}

          {{ form_errors(form.dateReservation) }}

          <div class="col-md-4">
            {{ form_widget(form.dateReservation) }}
          </div>
        </div>

         {{ form_widget(form.Suivant, {'attr': {'class': 'col-md-offset-3 btn btn-primary'}}) }}
         {# Génération automatique des champs pas encore écrits.
         Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
         et tous les champs cachés (type « hidden »). #}
         {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
    </div> 
{% endblock %}